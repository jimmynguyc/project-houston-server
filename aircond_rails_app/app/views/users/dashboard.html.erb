    <div class="col-sm-10" id='user_dashboard' >
			<h1>Air Conditioners</h1>
				<%= flash[:warning]%>
				<%= flash[:notice]%>
        <div class= 'col-sm-12 head'>
            <span style = 'float:right'><%= link_to 'Mobile Apps', phone_apps_path, method:'get',class:"btn btn-primary get-btn" %></span>
        </div>

        <div class= 'col-sm-12 body'>
            <%= render partial:'/aircond_groups/aircond_index',locals:{aircond_groups:@aircond_groups}%>
        </div>

        <div class= 'col-sm-12 foot'>
            <span style= 'float:left'><%= link_to "Add Aircond", new_aircond_path, method:'get',class:"btn btn-primary get-btn" %></span>
            <span style= 'float:left'><%= link_to "Assign Group", aircond_groups_path, method:'get',class:"btn btn-primary get-btn" %></span>

            <span style= 'float:right'>
                <%= form_for :aircond, url:set_all_status_path('ON') do |f|%>
                    <%= f.hidden_field :group_title, value:'ALL'%>
                    <%= f.submit'ON', style: "width:110px",class:"btn btn-primary submit-btn"  %>
                <% end %>
            </span>
            <span style= 'float:right'>
                <%= form_for :aircond, url:set_all_status_path('OFF') do |f|%>
                    <%= f.hidden_field :group_title, value:'ALL'%>
                    <%= f.submit'OFF', style: "width:110px",class:"btn btn-primary submit-btn"  %>
                <% end %>                    
            </span>
            <span style = 'float:right'><%= select_tag 'group_title', options_for_select(["ALL"] + AircondGroup.all.pluck(:title) ),class:"form-control", id:'group_selector'  %></span>
        </div>

    </div>


    <div class="col-sm-2" style = 'border-left-style: solid;border-bottom-style: solid; padding: 20px;text-align : right'>
      <%= render partial:'/users/currenttime'%>
    </div>


